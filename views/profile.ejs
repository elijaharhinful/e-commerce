<!DOCTYPE html>
<html>
<%- include('partials/head'); %>

<body class="main-layout">
    <%- include('layouts/header'); %>
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>User Profile</h4>
                        <div class="breadcrumb__links">
                            <a href="/">Home</a>
                            <span>Profile</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <br>
    <br>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="contact__form profile__form">
                        <br>
                        <form method="post" action="#">
                            <div class="row">
                                <div class="col-lg-12">
                                    <label for="">Name</label>
                                    <input type="text" name="name" class="form-control" placeholder="<%= user.name %>" disabled>
                                </div>
                                <div class="col-lg-12">
                                    <label for="">Email</label>
                                    <input type="text" name="email" class="form-control" placeholder="<%= user.email %>" disabled >
                                </div>
                                <div class="col-lg-12">
                                    <label for="">Username</label>
                                    <input type="text" name="username" class="form-control" placeholder="<%= user.username %>" disabled>
                                </div>
                                <div class="col-lg-12">
                                    <label for="">Phone number</label>
                                    <input type="number" name="number" class="form-control" placeholder="<%= user.number %>" disabled>
                                </div>
                                <div class="col-lg-12">
                                    <a  style="color: aliceblue;" class="primary-btn" href="/users/edit_profile/<%= user.id %>/">Edit Profile</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-5">
                    
                        <br>
                        <div class="contact__form password__form">
                            <br>
                            <h5>Use this form to change your password</h5>
                            <br>
                            <form method="post" action="/users/password/<%= user.id %>">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <input type="password" name="password" class="form-control" placeholder="Old Password" required>
                                    </div>
                                    <div class="col-lg-12">
                                        <input type="password" name="password1" class="form-control" placeholder="New Password" required>
                                    </div>
                                    <div class="col-lg-12">
                                        <input type="password" name="password2" class="form-control" placeholder="Confirm New Password" required>
                                    </div>
                                    <div class="col-lg-12">
                                        <button type="submit" class="site-btn">Change Password</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <br><br>
                        <div class="cart__total">
                            <h6><b>Billing Address</b></h6>
                            <p><i><%= user.address %></i></p>
                        </div>
                </div>
            </div>
            
        </div>
    </section>
    <br>
    <br>

    <%- include('layouts/footer'); %>
</body>

</html>
